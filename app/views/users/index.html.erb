<div class="row">
	<div class="col-md-1">&nbsp;</div>
  <div class="col-md-10">
    <h1>User page</h1>
    <table class="table table-bordered" align="center">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        		<% if defined? @users %>
        		<% @users.each do |u| %>
            <tr>
                <td><%= u.id %></td>
                <td><%= u.name %></td>
                <td><%= u.email %></td>
                <td>
                    <%= link_to "Show", user_path(u) %>
                    <%= link_to "Edit", edit_user_path(u) %>
                </td>
            </tr>
            <% end %>
            <% end %>
        </tbody>
    </table>
  </div>
  <div class="col-md-1">&nbsp;</div>
</div>